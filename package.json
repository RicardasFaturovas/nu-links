{
  "name": "nu-redirect",
  "displayName": "Nu redirect",
  "version": "0.0.1",
  "description": "An shortened link redirection extension",
  "author": "Ricardas Faturovas",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build --target=chrome-mv3",
    "build-firefox": "plasmo build --target=firefox-mv2",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "^1.9.3",
    "bulma": "^1.0.0",
    "plasmo": "0.85.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "sass": "^1.72.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.0",
    "@types/react-dom": "18.2.0",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "browser_specific_settings": {
      "gecko": {
        "id": "your-id@example.com"
      }
    },
    "host_permissions": [
      "*://nu/*"
    ],
    "permissions": [
      "storage",
      "declarativeNetRequest",
      "tabs"
    ]
  }
}
